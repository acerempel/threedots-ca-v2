{
  "include": ["resources/js/**/*"],
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "composite": true,
    "target": "ES2017",
    "module": "ES2020",
    "moduleResolution": "node",
    "declarationDir": "types",
    "outDir": "public/js",
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  }
}
